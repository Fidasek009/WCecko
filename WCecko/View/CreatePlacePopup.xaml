<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    x:Class="WCecko.View.CreatePlacePopup"
    xmlns:vm="clr-namespace:WCecko.ViewModel"
    x:DataType="vm:CreatePlaceViewModel"
    Size="500, 400"
    CanBeDismissedByTappingOutsideOfPopup="True"
    Color="Transparent">

    <Frame CornerRadius="25" 
           Margin="10"
           BorderColor="Black"
           BackgroundColor="{StaticResource Primary}"
           HasShadow="True">
        <VerticalStackLayout
            Padding="20"
            Spacing="15">

            <Label 
                Text="Create new place"
                Style="{StaticResource Headline}"
                VerticalOptions="Center"
                HorizontalOptions="Center" />

            <Entry
                Text="{Binding PlaceName}"
                Placeholder="Place Name"
                SemanticProperties.Hint="Enter the name of the place" />

            <Entry
                Text="{Binding PlaceDescription}"
                Placeholder="Place Description"
                SemanticProperties.Hint="Enter the description of the place" />

            <HorizontalStackLayout 
                HorizontalOptions="Center"
                Spacing="10"
                Margin="0,10,0,0">
                <Button
                    Text="Save"
                    Command="{Binding SaveCommand}" />
                <Button
                    Text="Cancel"
                    Command="{Binding CancelCommand}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
